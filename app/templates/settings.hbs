<Content @name={{t "menus.application.settings"}}>
  <hr>

  <h1 class="item-title">{{t "content.settings.set-name"}}</h1>
  <div>
    <div>
      <Input @id="change-name-input" @type="tex" @name="changeName" @value={{this.model.userName}} @key-up={{route-action "updateName"}} />
    </div>
  </div>

  <h1 class="item-title">{{t "content.settings.language"}}</h1>
  <div>
    <div class="info-locale align-self-start p-3">
      <LangSelect />
    </div>
  </div>

  <h1 class="item-title">{{t "content.settings.set-theme"}}</h1>
  <div>
    <label class="p-4">
      <Input @id="light-mode-checkbox" @type="checkbox" @name="lightMode" @checked={{this.model.isDark}} @keyPress={{route-action "toggleLightMode"}} />
      {{t "content.settings.dark-mode"}}
    </label>
  </div>
</Content>

{{outlet}}
